{
  "manifest_version": 3,
  "name": "IDS Extension",
  "version": "1.0",
  "description": "Intrusion Detection System Brave/Chrome Extension",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "options_ui": {
    "page": "src/dashboard.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  }
}
